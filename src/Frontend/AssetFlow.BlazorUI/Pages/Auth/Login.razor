@* ============================================================
   AssetFlow.BlazorUI / Pages / Auth / Login.razor
   Page de connexion (Image 3 du wireframe)
   Layout : Panneau bleu gauche + Formulaire droite
   ============================================================ *@

@page "/login"
@using AssetFlow.BlazorUI.Components

<div class="login-page">

    @* === PANNEAU GAUCHE BLEU === *@
    <div class="left-panel">

        @* Logo *@
        <img src="images/logo.png" alt="AssetFlow" class="panel-logo" />

        @* Badge du r√¥le (couleur selon le r√¥le) *@
        <div class="role-badge" style="background-color: @RoleColor">
            @RoleLabel
        </div>

        @* Description du r√¥le *@
        <p class="role-description">@RoleDescription</p>

        @* Fonctionnalit√©s *@
        <ul class="features-list">
            <li>üìÑ OCR Intelligent</li>
            <li>üß† Pr√©dictions IA</li>
            <li>üîî Alertes Temps R√©el</li>
        </ul>

    </div>

    @* === PANNEAU DROIT : FORMULAIRE === *@
    <div class="right-panel">

        <h1 class="form-title">Connexion @RoleLabel</h1>
        <p class="form-subtitle">Entrez vos identifiants pour acc√©der au syst√®me</p>

        @* Message d'erreur *@
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-error">@ErrorMessage</div>
        }

        @* Champ Email *@
        <InputField
            Label="Adresse email"
            Placeholder="nom@example.com"
            @bind-Value="Email"
            InputType="email"
            HasError="EmailError"
            ErrorMessage="Adresse email invalide" />

        @* Champ Mot de passe *@
        <InputField
            Label="Mot de passe"
            Placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            @bind-Value="Password"
            InputType="password"
            ShowPasswordToggle="true" />

        @* Se souvenir + Mot de passe oubli√© *@
        <div class="form-options">
            <label class="checkbox-label">
                <input type="checkbox" @bind="RememberMe" />
                Se souvenir de moi
            </label>
            <a href="/forgot-password" class="link">Mot de passe oubli√©?</a>
        </div>

        @* Bouton de connexion *@
        <button class="btn-primary"
                @onclick="HandleLogin"
                disabled="@IsLoading">
            @if (IsLoading)
            {
                <span>Connexion en cours...</span>
            }
            else
            {
                <span>Se connecter</span>
            }
        </button>

        @* Retour √† la s√©lection de r√¥le *@
        <div class="back-link">
            <a href="/role-select">‚Üê Changer de r√¥le</a>
        </div>

    </div>
</div>
